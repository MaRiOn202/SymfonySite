{%  extends "base.html.twig" %}

{% block title %} Article {% endblock %}

{% block body %}
<div class="container">
    <h1 class="title p-1">{{ article.title }}</h1>
    <div class="img-fluid">
        <img width="30%" height="30%" src="/assets/blog/images/category/{{ article.image }}" alt="{{ article.title }}">
    </div>

    <div class="content">
        <p class="date"> Ecrit le {{ article.createdAt| date("d/m/Y") }} Ã  {{ article.createdAt| date("H:i") }}
        par <span class="author">{{ article.author }}</span></p>
            <h2 class="title">{{ article.title }}</h2>
        <p class="content text-justify">
            {{ article.content | raw}}
        </p>
    </div>
</div>
{% endblock %}

